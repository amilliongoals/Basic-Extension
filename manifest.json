{
	"manifest_version": 2,

	"name": "Chapter Identifier",
	"description": "The start of page scraping an extesnion",
	"version": "1.0",
	"author": "joshu.gagnier",

	"background": {
		"scripts": ["popup.js"]   //script that will be ran 
		"persistent": true
	},

	"permissions": [
        "tabs",
        "http://*/",
        "https://*/"
    ],
	"browser_action": {
		"default_icon": "pharma best 9.png", //image to be used as icon, can be anything
		"default_popup": "popup.html" 
	}
}